{
    "lldb.dereferencePointers": false,
    "editor.tabSize": 2,
    "gitdoc.autoPull": "off",
    "gitdoc.autoPush": "off",
    "gitdoc.commitValidationLevel": "none",
    "gitdoc.enabled": true,
    "gitdoc.filePattern": "{**/*.h,**/*.cpp,**/Makefile}",
    "gitdoc.pullOnOpen": false,
    "gitdoc.autoCommitDelay": 10000,
    "editor.formatOnSave": true,
    "debug.onTaskErrors": "showErrors",
    "C_Cpp.default.cppStandard": "c++20",
    "files.associations": {
        "*.ejs": "html",
        "*.ptx": "xml",
        "algorithm": "cpp",
        "format": "cpp",
        "ostream": "cpp"
    }
}