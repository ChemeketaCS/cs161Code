#include <iostream>

using namespace std;

int main() {
  int temp;
  cout << "Enter a temperature:";
  cin >> temp;
  
  bool tempOK = true;
  
  //If temp is NOT >= 68, it is too cold
  if (!(temp >= 68)) {
    tempOK = false;
  }

  //If temp is NOT >= 75, it is too hot
  if (!(temp <= 75)) {
    tempOK = false;
  }

  if(tempOK)
    cout << "Don't touch that dial!" << endl;
  else
    cout << "Adjust the thermostat!" << endl;
}