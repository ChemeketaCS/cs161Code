    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Program",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/program.exe",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "make program.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "MIMode": "gdb",
        },
        {
            "name": "Run Program (Mac)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/program.exe",
            "cwd": "${workspaceFolder}",
            // For macs, explicitytly set the compiler to g++-15
            // g++ is mapped to Apple's clang, which we don't want to use
            "preLaunchTask": "export CXX=g++-15 && make program.exe",
        },
    ]
}