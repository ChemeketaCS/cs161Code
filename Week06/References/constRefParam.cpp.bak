#include <iostream>
#include <string>
using namespace std;

// countEs that modifies the input string
int countEs(string& s) {
    int count = 0;
    for (size_t i = 0; i < s.size(); ++i) {
        s.at(i) = tolower(s.at(i));
        if (s.at(i) == 'e') {
            count++;
        }
    }
    return count;
}

