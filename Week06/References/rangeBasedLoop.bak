#include <iostream>
#include <string>
using namespace std;

int main() {
    string myString = "hello";
    
    cout << "---- Loop with value ----" << endl;

    for (char letter : myString) {
        letter = toupper(letter);
        cout << "letter is: " << letter << endl;
    }
    cout << "myString is: " << myString << endl;

    cout << "---- Now with reference ----" << endl;

    for (char& letter : myString) {
        letter = toupper(letter);
        cout << "letter is: " << letter << endl;
    }

    cout << "myString is: " << myString << endl;
}