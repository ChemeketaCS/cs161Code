#include <iostream>
using namespace std;

int main() {
  // Prompt the user
  cout << "Enter four numbers: " << endl;

  int num1, num2, num3, num4;
  // Get one at a time
  cin >> num1;
  cin >> num2;
  cin >> num3;
  cin >> num4;

  // Get all at once
  cin >> num1 >> num2 >> num3 >> num4;

  cout << "The numbers are: " << num1 << ", " << num2 << ", " << num3 << ", "
       << num4 << endl;

  // Calculate the sum
  int sum = num1 + num2 + num3 + num4;
  cout << "The sum is: " << sum << endl;
}
