#include <iostream>
using namespace std;

int main() {
  for (int i = 1; i <= 10; ++i) {
    cout << "i: " << i << endl;
  }

  cout << "---------------------" << endl;

  for (int i = 10; i >= 1; --i) {
    cout << "i: " << i << endl;
  }

  cout << "---------------------" << endl;

  for (int i = 0; i <= 20; i += 2) {
    cout << "i: " << i << endl;
  }
}
